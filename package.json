{
  "name": "hector-ai",
  "version": "1.0.0",
  "main": "main.js",
  "source": "index.html",
  "targets": {
    "main": false,
    "renderer": {
      "source": "index.html",
     "distDir": "./dist",
      "publicUrl": ".",
      "context": "browser"
    }
  },
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"parcel index.html\" \"electron .\"",
    "build": "parcel build --target renderer",
    "clean": "rm -rf dist .parcel-cache",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "dat.gui": "^0.7.9",
    "three": "^0.162.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@parcel/transformer-glsl": "2.15.4",
    "parcel": "^2.15.4",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.hector.ai",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "asar": true
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
